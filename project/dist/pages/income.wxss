.earning{
    width: 100%;
    height: 300rpx;
    background: #bbd3f8;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    font-size: 30rpx;
}
.earning .balance{
    color: sienna
}
.earning .red{
    color: #f00
}
.earning .white{
    color: white;
    border-radius:10rpx;
    padding:2rpx 10rpx;
    border:solid 1rpx #fff;
}
.tabClick {
    height: 60rpx;
    line-height: 60rpx;
    background: #fff;
    border-bottom: solid 15rpx #F1EFEF;
    border-top: solid 15rpx #F1EFEF;
}

.tabClick text {
    padding: 0 15rpx;
    font-size: 30rpx;
}
